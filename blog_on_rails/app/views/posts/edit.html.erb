<h1>Edit Question</h1>

<%= form_with(model: @post, local: true ) do |form| %>


  <% if @post.errors.present? %>
    <p class="form-errors">
      <%= @post.errors.full_messages.join(", ") %>
    </p>
  <% end %>

  <div>
    <%= form.label :title %> <br />
    <%= form.text_field :title %>
  </div>
  <br>
  <div>
  <%= form.label :Content %> <br />
      <%= form.text_area(
        :body,
        cols: 50,
        rows: 5,
        class: "form-control"
      ) %>
  </div>
  <%= form.submit "Update"%>

  <% end %>