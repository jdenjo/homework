<%= form_with(model: @post, local: true ) do |form| %>
  <div class="form-group">
  <% if @post.errors.present? %>
    <p class="form-errors">
      <%= @post.errors.full_messages.join(", ") %>
    </p>
  <% end %>

  <div>
    <%= form.label :title,  style: "font-size: 20px"  %> <br />
    <%= form.text_field :title, style: "width: 100%" %>
  </div>
  <br>
  <div>
  <%= form.label :Body, style: "font-size: 20px" %>
      <%= form.text_area(
        :body,
        cols: 50,
        rows: 5,
        class: "form-control"
      ) %>
  </div>
  <br>
  <%= form.submit "Create Post", class: "btn btn-md btn-outline-primary" %>
</div>
  <% end %>
