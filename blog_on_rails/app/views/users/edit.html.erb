
<h1>Edit User Details</h1>

<%= form_with model: @user, local: true do |f| %>

 <% if @user.errors.any? %>
   <p>
     <%= @user.errors.full_messages.join(", ")  %>
   </p>
 <% end %>

 <div>
   <%= f.label :first_name %>
   <%= f.text_field :first_name %>
 </div>
 <div>
   <%= f.label :last_name %>
   <%= f.text_field :last_name %>
 </div>
 <div>
   <%= f.label :email %>
   <%= f.email_field :email %>
 </div>

 <%= f.submit "Update" , class: "btn btn-md btn-outline-primary" %>
<% end %>

<a href="/users/<%= @user.id %>/password"> Change password </a>

