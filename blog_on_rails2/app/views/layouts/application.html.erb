<!DOCTYPE html>
<html>
  <head>
    <title>Blog on rails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
</head>

<body>
    <header>
   
     <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Blog on Rails</a>
      
      <ul class="navbar-nav ml-auto">
       <%= link_to 'Home', root_path, class: "nav-item nav-link form-inline" %>  

       <%= link_to 'New Post', new_post_path, class: "nav-item nav-link form-inline" %> 

       <%= link_to 'Posts', posts_path, class: "nav-item nav-link form-inline" %>

       <% if user_signed_in? %>
         <span class="nav-item  form-inline" > <div style="color:black"> Hello&nbsp </div>
            <a href="/users/<%= current_user.id %>/edit"><%= current_user.full_name %></a>
         </span> 
          <%= link_to "Sign Out", session_path, method: :delete, data: {confirm: "Are you sure you want to sign out?"}, class: "nav-item nav-link form-inline" %> 
       <% else %>

         <%= link_to "Sign In", new_session_path, class: "nav-item nav-link form-inline" %>

         <%= link_to "Sign Up", new_user_path, class: "nav-item nav-link form-inline" %>

       <% end %>

       </ul>

     </nav>

      <% flash.each do |type, message| %>
        <div class="flash flash-<%= type %>">
         <%= message %>
       </div>
     <% end %>

     
  </body>
    </header>



    <div class="card-body">
    <div class="card mb-4"" style="padding: 15px">

    <%= yield %>

    </div>
    </div>
    
    </main>
  
  </body>
</html>
